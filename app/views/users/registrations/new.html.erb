<div class="flex flex-col h-screen bg-screen items-center justify-center">
  <img id="create-account" src="<%= asset_path('create-account.svg') %>" alt="Create account Image" class="mb-4 inset-0 object-center max-w-44">
  <h2 class="font-klasik my-4">Crie sua conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="relative mb-4" data-controller="user-icon">
      <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pr-2 pointer-events-none border-r border-screen">
        <svg data-user-icon-target="icon" width="14" height="14" viewBox="0 0 17 18" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-eclipse">
          <path d="M15.2222 17V15.2222C15.2222 14.2793 14.8476 13.3749 14.1808 12.7081C13.514 12.0413 12.6097 11.6667 11.6667 11.6667H4.55556C3.61256 11.6667 2.70819 12.0413 2.0414 12.7081C1.3746 13.3749 1 14.2793 1 15.2222V17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M8.11122 8.11111C10.0749 8.11111 11.6668 6.51923 11.6668 4.55556C11.6668 2.59188 10.0749 1 8.11122 1C6.14754 1 4.55566 2.59188 4.55566 4.55556C4.55566 6.51923 6.14754 8.11111 8.11122 8.11111Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>

      <%= f.text_field :name, autofocus: true,
        class: "outline-offset-0 placeholder:text-eclipse text-sm rounded-md w-full ps-12 p-2.5 focus:outline-none focus:ring-0 border-0",
        placeholder: "Nome",
        data: { action: "focus->user-icon#toggleActive blur->user-icon#toggleInactive input->user-icon#checkInput" }
      %>
    </div>

    <div class="relative mb-4" data-controller="user-icon">
      <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pr-2 pointer-events-none border-r border-screen">
        <svg data-user-icon-target="icon"  width="14" height="14" viewBox="0 0 17 14" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-eclipse">
          <path d="M14.1556 0.9H14.1555L2.8445 0.9L2.84439 0.9C2.32888 0.900558 1.83464 1.10559 1.47012 1.47012C1.10559 1.83464 0.900558 2.32888 0.9 2.84439V2.8445L0.9 11.1555L0.9 11.1556C0.900558 11.6711 1.10559 12.1654 1.47012 12.5299C1.83464 12.8944 2.32888 13.0994 2.84439 13.1H2.8445H14.1555H14.1556C14.6711 13.0994 15.1654 12.8944 15.5299 12.5299C15.8944 12.1654 16.0994 11.6711 16.1 11.1556V11.1555V2.8445V2.84439C16.0994 2.32888 15.8944 1.83464 15.5299 1.47012C15.1654 1.10559 14.6711 0.900558 14.1556 0.9ZM2.84462 2.1H14.1554C14.1554 2.1 14.1554 2.1 14.1555 2.1C14.3529 2.10026 14.5421 2.17878 14.6816 2.31835C14.8212 2.45794 14.8998 2.6472 14.9 2.84462V3.1724L8.5 7.28662L2.1 3.1724L2.1 2.84462C2.1 2.84459 2.1 2.84455 2.1 2.84452C2.10026 2.64714 2.17878 2.45792 2.31835 2.31835C2.45792 2.17878 2.64714 2.10026 2.84452 2.1C2.84455 2.1 2.84459 2.1 2.84462 2.1ZM2.31835 11.6816C2.17878 11.5421 2.10026 11.3529 2.1 11.1555C2.1 11.1554 2.1 11.1554 2.1 11.1554L2.1 4.59916L8.1754 8.5046C8.17541 8.50461 8.17542 8.50461 8.17543 8.50462C8.27223 8.56688 8.3849 8.59999 8.5 8.59999C8.6151 8.59999 8.72777 8.56688 8.82457 8.50462C8.82458 8.50461 8.82459 8.50461 8.8246 8.5046L14.9 4.59916V11.1554C14.8998 11.3528 14.8212 11.5421 14.6816 11.6816C14.5421 11.8212 14.3528 11.8998 14.1554 11.9H2.84462C2.6472 11.8998 2.45794 11.8212 2.31835 11.6816Z" fill="currentColor" stroke="currentColor" stroke-width="0.2"/>
        </svg>
      </div>

      <%= f.text_field :email, autofocus: true,
        class: "outline-offset-0 placeholder:text-eclipse text-sm rounded-md w-full ps-12 p-2.5 focus:outline-none focus:ring-0 border-0",
        placeholder: "Email",
        data: { action: "focus->user-icon#toggleActive blur->user-icon#toggleInactive input->user-icon#checkInput" }
      %>
      </div>

      <div class="relative mb-4" data-controller="user-icon">
        <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pr-2 pointer-events-none border-r border-screen">
          <svg data-user-icon-target="icon"  width="14" height="14" viewBox="0 0 17 18" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-eclipse">
            <path d="M7 0.9C4.44477 0.9 2.4 2.94477 2.4 5.5V7.40285C1.5441 7.45192 0.9 8.1284 0.9 9V15.5C0.9 16.4052 1.59477 17.1 2.5 17.1H11.5C12.4052 17.1 13.1 16.4052 13.1 15.5V9C13.1 8.1284 12.4559 7.45192 11.6 7.40285V5.5C11.6 2.94477 9.55523 0.9 7 0.9ZM11.9 9V15.5C11.9 15.6273 11.858 15.7256 11.7918 15.7918C11.7256 15.858 11.6273 15.9 11.5 15.9H2.5C2.37272 15.9 2.27443 15.858 2.20821 15.7918C2.14199 15.7256 2.1 15.6273 2.1 15.5V9C2.1 8.87272 2.14199 8.77443 2.20821 8.70821C2.27443 8.64199 2.37272 8.6 2.5 8.6H3H11H11.5C11.6273 8.6 11.7256 8.64199 11.7918 8.70821C11.858 8.77443 11.9 8.87272 11.9 9ZM3.6 7.4V5.5C3.6 3.60523 5.10523 2.1 7 2.1C8.89477 2.1 10.4 3.60523 10.4 5.5V7.4H3.6Z" fill="currentColor" stroke="currentColor" stroke-width="0.2"/>
          </svg>
        </div>
        <%= f.text_field :password, autofocus: true,
          class: "outline-offset-0 placeholder:text-eclipse text-sm rounded-md w-full ps-12 p-2.5 focus:outline-none focus:ring-0 border-0",
          placeholder: "Senha",
          data: { action: "focus->user-icon#toggleActive blur->user-icon#toggleInactive input->user-icon#checkInput" }
        %>
      </div>

    <div class="bg-calm rounded-lg text-eclipse text-center p-2 font-semibold my-6">
      <%= f.submit "Criar conta" %>
    </div>
  <% end %>

  <div class="flex flex-col items-center space-y-1 text-eclipse">
    <%= render "users/shared/links" %>
  </div>
</div>

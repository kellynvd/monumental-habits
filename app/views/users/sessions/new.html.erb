          class: " bg-screen outline-offset-0 placeholder:text-eclipse text-sm rounded-md w-full ps-12 p-2.5 focus:outline-none focus:ring-0 border-0",
          placeholder: "Senha",
          data: { action: "focus->user-icon#toggleActive blur->user-icon#toggleInactive input->user-icon#checkInput" }
        %>
      </div>

      <div class="bg-calm rounded-lg text-eclipse text-center p-2 font-semibold mt-6">
        <%= f.submit "Entrar" %>
